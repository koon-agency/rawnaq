---
import Button from "./Button.astro";
---

<section class="min-h-[60vh] flex bg-greenColor-400">
    <img class="absolute h-20 w-20 lg:h-56 lg:w-56 lg:top-0 left-[10%]" src="images/elm2.png" alt="">
    <img class="absolute h-20 w-20 lg:h-56 lg:w-56 top-[27rem] lg:right-[42%]" src="images/elm1.png" alt="">
    <img class="absolute h-16 w-16 lg:h-32 lg:w-32 top-2/5 right-0" src="images/elm1.png" alt="">
    <div class="max-w-6xl w-full mx-auto grid grid-cols-1 lg:grid-cols-2">
        <div class="w-full flex justify-center">
            <img class="h-[45vh] lg:h-[75vh] w-auto object-contain z-10" src="images/pets.png" alt="">
        </div>
        <div class="w-full flex flex-col justify-center rtl px-6 lg:px-0 relative">
            <h1 class="text-4xl lg:text-6xl text-white mb-6 font-normal">رونق الطبيعة</h1>
            <h2 class="text-3xl lg:text-5xl text-white rtl !leading-tight">سقف دافئ يحتضن رفاهية الحيوانات الأليفة</h2>
            <Button id="subscribe" type={'primary'} text="تعرف علينا" href="#about" className="mt-6" />
        </div>
    </div>
</section>
<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#9EDD82ff" fill-opacity="1" d="M0,224L80,192C160,160,320,96,480,96C640,96,800,160,960,176C1120,192,1280,160,1360,144L1440,128L1440,0L1360,0C1280,0,1120,0,960,0C800,0,640,0,480,0C320,0,160,0,80,0L0,0Z"></path></svg>

<script client:only>
    document.getElementById('subscribe').addEventListener('click', (event) => {
        fbq('track', 'Subscribe');
        snaptr('track','SUBSCRIBE')

    });
</script>
