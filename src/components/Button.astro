---
export interface Props {
    id: string;
	text: string;
    icon?: any;
    href: string;
    type?: 'primary' | 'secondary';
    size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl';
    className?: string;
}

const { text, icon, type, size = 'xl', className = '', href, id = '' } = Astro.props as Props;
---

<a id={id} href={href}>
    <button class={`ml-auto ${type} pr-6 pl-3 py-1.5 font-medium rounded-lg	 text-${size} flex items-center justify-center ${className}`}>
        { text }
        { icon ? icon
        : <svg class={`${size.includes('s') ? 'w-5 h-5' : 'w-6 h-6'} mr-1`} fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg> }
    </button>
</a>

<style>
    button.primary {
        @apply bg-greyColor text-white
    }
    button.secondary {
        @apply bg-white border border-gray-300 text-greyColor;
    }
</style>